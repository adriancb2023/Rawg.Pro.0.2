<Window x:Class="Proyecto_Final_PRO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        Title="GameShop Pro" Height="700" Width="1200" 
        Background="#F8FAFC" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Estilos modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#334155"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E2E8F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Barra de título personalizada -->
    <Border CornerRadius="12" Background="White" BorderBrush="#E5E7EB" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="4" BlurRadius="16"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de título -->
            <Grid Grid.Row="0" Background="#3B82F6" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="GameShop Pro" 
                          Foreground="White" 
                          FontSize="14" 
                          FontWeight="SemiBold" 
                          VerticalAlignment="Center" 
                          Margin="16,0"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="−" 
                            Width="40" Height="40" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="16" 
                            Click="MinimizeButton_Click"/>
                    <Button Content="✕" 
                            Width="40" Height="40" 
                            Background="Transparent" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="12" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Contenido principal -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Login Modal -->
                <Grid x:Name="login" Visibility="Collapsed" Grid.ColumnSpan="2" 
                      Background="#000000" Opacity="0.9" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Border Style="{StaticResource CardStyle}" 
                            Width="400" Height="300" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Iniciar Sesión" 
                                      Foreground="#1F2937" 
                                      FontSize="28" 
                                      FontWeight="Bold" 
                                      TextAlignment="Center" 
                                      Margin="0,0,0,32"/>
                            
                            <TextBlock Text="Usuario" Foreground="#6B7280" FontSize="14" Margin="0,0,0,8"/>
                            <TextBox x:Name="UsernameTextBox" 
                                    Style="{StaticResource ModernTextBox}" 
                                    Margin="0,0,0,16"/>
                            
                            <TextBlock Text="Contraseña" Foreground="#6B7280" FontSize="14" Margin="0,0,0,8"/>
                            <PasswordBox x:Name="PasswordBox" 
                                        Style="{StaticResource ModernPasswordBox}" 
                                        Margin="0,0,0,24"/>
                            
                            <Button Content="Iniciar Sesión" 
                                   Click="LoginButton_Click" 
                                   Style="{StaticResource ModernButton}"
                                   HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Logo y título -->
                        <StackPanel Grid.Row="0" Margin="20,24,20,32">
                            <TextBlock Text="🎮 GameShop" 
                                      Foreground="#1F2937" 
                                      FontSize="24" 
                                      FontWeight="Bold" 
                                      TextAlignment="Center"/>
                            <Rectangle Height="1" Fill="#E5E7EB" Margin="0,16,0,0"/>
                        </StackPanel>
                        
                        <!-- Navegación -->
                        <StackPanel Grid.Row="1" Margin="16,0">
                            <Button x:Name="bt_inicio" 
                                   Style="{StaticResource SidebarButton}" 
                                   Click="mostrar_inicio">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Home" Width="16" Height="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="bt_proximos_lanzamientos" 
                                   Style="{StaticResource SidebarButton}" 
                                   Click="mostrar_catalogo">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Calendar" Width="16" Height="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Próximos Lanzamientos" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="bt_distribuidoras" 
                                   Style="{StaticResource SidebarButton}" 
                                   Click="mostrar_distribuidoras">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Industry" Width="16" Height="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Distribuidoras" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="bt_inventario" 
                                   Style="{StaticResource SidebarButton}" 
                                   Click="mostrar_inventario">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Tablet" Width="16" Height="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Mi Inventario" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="bt_catalogo" 
                                   Style="{StaticResource SidebarButton}" 
                                   Click="mostrar_micatalogo">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Bookmark" Width="16" Height="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Catálogo de Juegos" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button x:Name="bt_ventas" 
                                   Style="{StaticResource SidebarButton}" 
                                   Click="mostrar_ventas">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Money" Width="16" Height="16" Margin="0,0,12,0"/>
                                    <TextBlock Text="Ventas" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- Usuario y logout -->
                        <StackPanel Grid.Row="2" Margin="16,0,16,24">
                            <Rectangle Height="1" Fill="#E5E7EB" Margin="0,0,0,16"/>
                            <TextBlock x:Name="EmpleadoNombre" 
                                      Foreground="#6B7280" 
                                      FontSize="14" 
                                      FontWeight="Medium" 
                                      TextAlignment="Center" 
                                      Margin="0,0,0,12"/>
                            <Button x:Name="bt_logout" 
                                   Content="Cerrar Sesión" 
                                   Background="#EF4444" 
                                   Style="{StaticResource ModernButton}" 
                                   Click="logout" 
                                   HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Contenido principal -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#F8FAFC">
                    <Grid>
                        <!-- Dashboard -->
                        <Grid x:Name="inicio" Visibility="Collapsed" Margin="32">
                            <StackPanel>
                                <TextBlock Text="Dashboard" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#1F2937" 
                                          Margin="0,0,0,32"/>
                                
                                <WrapPanel>
                                    <Border Style="{StaticResource CardStyle}" Width="240" Height="120">
                                        <StackPanel>
                                            <TextBlock Text="Total Juegos" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="120" 
                                                      Foreground="#3B82F6" 
                                                      FontSize="36" 
                                                      FontWeight="Bold" 
                                                      Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Style="{StaticResource CardStyle}" Width="240" Height="120">
                                        <StackPanel>
                                            <TextBlock Text="Usuarios Activos" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="4,500" 
                                                      Foreground="#10B981" 
                                                      FontSize="36" 
                                                      FontWeight="Bold" 
                                                      Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Border Style="{StaticResource CardStyle}" Width="240" Height="120">
                                        <StackPanel>
                                            <TextBlock Text="Ventas del Mes" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium"/>
                                            <TextBlock Text="€12,312" 
                                                      Foreground="#F59E0B" 
                                                      FontSize="36" 
                                                      FontWeight="Bold" 
                                                      Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>
                                
                                <Border Style="{StaticResource CardStyle}" Margin="0,24,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Ventas Mensuales" 
                                                  FontSize="20" 
                                                  FontWeight="SemiBold" 
                                                  Foreground="#1F2937" 
                                                  Margin="0,0,0,16"/>
                                        <ScottPlot:WpfPlot x:Name="ventas_mensuales" Height="300"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Próximos juegos -->
                        <Grid x:Name="proximos_juegos" Visibility="Collapsed" Margin="32">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" 
                                      Text="Próximos Lanzamientos" 
                                      FontSize="32" 
                                      FontWeight="Bold" 
                                      Foreground="#1F2937" 
                                      Margin="0,0,0,32"/>
                            
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="gamesList" 
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        MouseDoubleClick="elemento_seleccionado">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource GameCardStyle}" Width="280" Height="320">
                                                <StackPanel>
                                                    <Border CornerRadius="8,8,0,0" ClipToBounds="True">
                                                        <Image Source="{Binding Background_Image}" 
                                                              Width="240" Height="135" 
                                                              Stretch="UniformToFill"/>
                                                    </Border>
                                                    
                                                    <StackPanel Margin="16">
                                                        <TextBlock Text="{Binding Name}" 
                                                                  Foreground="#1F2937" 
                                                                  FontSize="16" 
                                                                  FontWeight="SemiBold" 
                                                                  TextWrapping="Wrap" 
                                                                  MaxHeight="48"/>
                                                        
                                                        <TextBlock Text="{Binding Released}" 
                                                                  Foreground="#6B7280" 
                                                                  FontSize="14" 
                                                                  Margin="0,8,0,12"/>
                                                        
                                                        <ItemsControl ItemsSource="{Binding Short_Screenshots}" MaxHeight="60">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border CornerRadius="4" ClipToBounds="True" Margin="2">
                                                                        <Image Source="{Binding Image}" Width="48" Height="27"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Grid>

                        <!-- Detalles del juego API -->
                        <Grid x:Name="infoJuego" Visibility="Collapsed" Margin="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Imagen y screenshots -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <Border CornerRadius="8" ClipToBounds="True" Margin="0,0,0,16">
                                        <Image x:Name="gameImage" Height="225" Stretch="UniformToFill"/>
                                    </Border>
                                    
                                    <TextBlock Text="Capturas de Pantalla" 
                                              Foreground="#1F2937" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Margin="0,0,0,12"/>
                                    
                                    <ListBox x:Name="gameScreenshots" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            MouseDoubleClick="abir_captura">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="6" ClipToBounds="True" Margin="4">
                                                    <Image Source="{Binding}" Width="80" Height="45"/>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>

                            <!-- Información del juego -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock x:Name="gameName" 
                                              FontSize="36" 
                                              FontWeight="Bold" 
                                              Foreground="#1F2937" 
                                              TextWrapping="Wrap" 
                                              Margin="0,0,0,24"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                            <TextBlock Text="Fecha de Lanzamiento" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameReleased" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text="Puntuación" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameRating" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text="Precio" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gamePrice" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Género" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameGenre" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      TextWrapping="Wrap" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text="Desarrolladora" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameDeveloper" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Button x:Name="bt_comprar" 
                                           Content="Listar Próximo Lanzamiento" 
                                           Style="{StaticResource ModernButton}" 
                                           HorizontalAlignment="Stretch" 
                                           Margin="0,32,0,16" 
                                           Click="add_juego_a_inventario"/>
                                    
                                    <Rectangle Height="1" Fill="#E5E7EB" Margin="0,16"/>
                                    
                                    <TextBlock Text="Vista Previa" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Foreground="#1F2937" 
                                              Margin="0,16,0,12"/>
                                    
                                    <Border CornerRadius="8" ClipToBounds="True">
                                        <Image x:Name="imagengrande" Height="200" Stretch="UniformToFill"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Distribuidoras -->
                        <Grid x:Name="distribuidoras" Visibility="Hidden" Margin="32">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                      Text="Distribuidoras" 
                                      FontSize="32" 
                                      FontWeight="Bold" 
                                      Foreground="#1F2937" 
                                      Margin="0,0,0,24"/>

                            <!-- Filtros de búsqueda -->
                            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                                <StackPanel>
                                    <TextBlock Text="Filtros de Búsqueda" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Foreground="#1F2937" 
                                              Margin="0,0,0,16"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                            <TextBlock Text="Título" Foreground="#6B7280" FontSize="14" Margin="0,0,0,8"/>
                                            <TextBox x:Name="tb_titulo" Style="{StaticResource ModernTextBox}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                            <TextBlock Text="Año de Lanzamiento" Foreground="#6B7280" FontSize="14" Margin="0,0,0,8"/>
                                            <TextBox x:Name="tb_fecha" Style="{StaticResource ModernTextBox}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2" Margin="0,0,16,0">
                                            <TextBlock Text="GOTY por Año" Foreground="#6B7280" FontSize="14" Margin="0,0,0,8"/>
                                            <TextBox x:Name="tb_ano" Style="{StaticResource ModernTextBox}"/>
                                        </StackPanel>
                                        
                                        <Button x:Name="bt_buscar" 
                                               Grid.Column="3" 
                                               Content="Buscar" 
                                               Style="{StaticResource ModernButton}" 
                                               VerticalAlignment="Bottom" 
                                               Click="aplicar_filtro"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Lista de juegos -->
                            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="gamesList2" 
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        MouseDoubleClick="elemento_seleccionado2">
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource GameCardStyle}" Width="280" Height="320">
                                                <StackPanel>
                                                    <Border CornerRadius="8,8,0,0" ClipToBounds="True">
                                                        <Image Source="{Binding Background_Image}" 
                                                              Width="240" Height="135" 
                                                              Stretch="UniformToFill"/>
                                                    </Border>
                                                    
                                                    <StackPanel Margin="16">
                                                        <TextBlock Text="{Binding Name}" 
                                                                  Foreground="#1F2937" 
                                                                  FontSize="16" 
                                                                  FontWeight="SemiBold" 
                                                                  TextWrapping="Wrap" 
                                                                  MaxHeight="48"/>
                                                        
                                                        <TextBlock Text="{Binding Released}" 
                                                                  Foreground="#6B7280" 
                                                                  FontSize="14" 
                                                                  Margin="0,8,0,12"/>
                                                        
                                                        <ItemsControl ItemsSource="{Binding Short_Screenshots}" MaxHeight="60">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <WrapPanel/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border CornerRadius="4" ClipToBounds="True" Margin="2">
                                                                        <Image Source="{Binding Image}" Width="48" Height="27"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Grid>

                        <!-- Detalles del juego 2 -->
                        <Grid x:Name="infoJuego2" Visibility="Hidden" Margin="32">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Imagen y screenshots -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <Border CornerRadius="8" ClipToBounds="True" Margin="0,0,0,16">
                                        <Image x:Name="gameImage2" Height="225" Stretch="UniformToFill"/>
                                    </Border>
                                    
                                    <TextBlock Text="Capturas de Pantalla" 
                                              Foreground="#1F2937" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Margin="0,0,0,12"/>
                                    
                                    <ListBox x:Name="gameScreenshots2" 
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            MouseDoubleClick="abir_captura2">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="6" ClipToBounds="True" Margin="4">
                                                    <Image Source="{Binding}" Width="80" Height="45"/>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </Border>

                            <!-- Información del juego -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock x:Name="gameName2" 
                                              FontSize="36" 
                                              FontWeight="Bold" 
                                              Foreground="#1F2937" 
                                              TextWrapping="Wrap" 
                                              Margin="0,0,0,24"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                            <TextBlock Text="Fecha de Lanzamiento" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameReleased2" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text="Puntuación" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameRating2" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text="Precio" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gamePrice2" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Género" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameGenre2" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      TextWrapping="Wrap" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text="Desarrolladora" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,4"/>
                                            <TextBlock x:Name="gameDeveloper2" 
                                                      FontSize="16" 
                                                      Foreground="#1F2937" 
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Button x:Name="bt_comprar2" 
                                           Content="Añadir a mi Catálogo" 
                                           Style="{StaticResource ModernButton}" 
                                           HorizontalAlignment="Stretch" 
                                           Margin="0,32,0,16" 
                                           Click="add_juego_a_inventario2"/>
                                    
                                    <Rectangle Height="1" Fill="#E5E7EB" Margin="0,16"/>
                                    
                                    <TextBlock Text="Vista Previa" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Foreground="#1F2937" 
                                              Margin="0,16,0,12"/>
                                    
                                    <Border CornerRadius="8" ClipToBounds="True">
                                        <Image x:Name="imagengrande2" Height="200" Stretch="UniformToFill"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Overlay para formulario -->
                            <Grid x:Name="blur1" Grid.Column="1" Background="#000000" Opacity="0.5" Visibility="Hidden"/>
                            <Grid x:Name="blur2" Grid.Column="0" Background="#000000" Opacity="0.5" Visibility="Hidden"/>

                            <!-- Formulario de inventario -->
                            <Border x:Name="form_inventario" 
                                   Grid.Column="1" 
                                   Visibility="Hidden" 
                                   Style="{StaticResource CardStyle}"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Width="400">
                                <StackPanel>
                                    <TextBlock Text="Añadir al Inventario" 
                                              FontSize="24" 
                                              FontWeight="Bold" 
                                              Foreground="#1F2937" 
                                              TextAlignment="Center" 
                                              Margin="0,0,0,24"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                            <TextBlock Text="Número de Copias" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      Margin="0,0,0,8"/>
                                            <TextBox x:Name="stock" Style="{StaticResource ModernTextBox}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                            <TextBlock Text="Precio de Venta" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      Margin="0,0,0,8"/>
                                            <TextBox x:Name="precioVenta" Style="{StaticResource ModernTextBox}"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,0">
                                        <Button x:Name="bt_guardar" 
                                               Content="Guardar" 
                                               Style="{StaticResource ModernButton}" 
                                               Margin="0,0,8,0" 
                                               Click="guardar_inventario"/>
                                        <Button x:Name="bt_cancelar" 
                                               Content="Cancelar" 
                                               Background="#6B7280" 
                                               Style="{StaticResource ModernButton}" 
                                               Margin="8,0,0,0" 
                                               Click="cancelar_guardar_inventario"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Inventario -->
                        <Grid x:Name="inventario" Visibility="Hidden" Margin="32">
                            <StackPanel>
                                <TextBlock Text="Mi Inventario" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#1F2937" 
                                          Margin="0,0,0,32"/>
                                
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ListBox x:Name="inventoryList" Background="Transparent" BorderThickness="0">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource GameCardStyle}" Width="280" Height="200">
                                                    <StackPanel>
                                                        <Border CornerRadius="8,8,0,0" ClipToBounds="True">
                                                            <Image Source="{Binding Portada}" 
                                                                  Width="240" Height="120" 
                                                                  Stretch="UniformToFill"/>
                                                        </Border>
                                                        
                                                        <StackPanel Margin="16">
                                                            <TextBlock Text="{Binding Nombre}" 
                                                                      Foreground="#1F2937" 
                                                                      FontSize="16" 
                                                                      FontWeight="SemiBold" 
                                                                      TextWrapping="Wrap"/>
                                                            
                                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                                <TextBlock Text="Stock: " 
                                                                          Foreground="#6B7280" 
                                                                          FontSize="14"/>
                                                                <TextBlock Text="{Binding Stock}" 
                                                                          Foreground="#3B82F6" 
                                                                          FontSize="14" 
                                                                          FontWeight="SemiBold"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>

                        <!-- Mi Catálogo -->
                        <Grid x:Name="mi_catalogo" Visibility="Collapsed" Margin="32">
                            <StackPanel>
                                <TextBlock Text="Mi Catálogo" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#1F2937" 
                                          Margin="0,0,0,32"/>
                                
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ListBox x:Name="micatalogoList" Background="Transparent" BorderThickness="0">
                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource GameCardStyle}" Width="280" Height="200">
                                                    <StackPanel>
                                                        <Border CornerRadius="8,8,0,0" ClipToBounds="True">
                                                            <Image Source="{Binding Portada}" 
                                                                  Width="240" Height="120" 
                                                                  Stretch="UniformToFill"/>
                                                        </Border>
                                                        
                                                        <StackPanel Margin="16">
                                                            <TextBlock Text="{Binding Nombre}" 
                                                                      Foreground="#1F2937" 
                                                                      FontSize="16" 
                                                                      FontWeight="SemiBold" 
                                                                      TextWrapping="Wrap"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>

                        <!-- Ventas -->
                        <Grid x:Name="ventas" Visibility="Visible" Margin="32">
                            <StackPanel>
                                <TextBlock Text="Panel de Ventas" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="#1F2937" 
                                          Margin="0,0,0,32"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Selección de juego -->
                                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0">
                                        <StackPanel>
                                            <TextBlock Text="Seleccionar Juego" 
                                                      Foreground="#1F2937" 
                                                      FontSize="20" 
                                                      FontWeight="SemiBold" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <ComboBox x:Name="cb_juegos_ventas" 
                                                     Background="White" 
                                                     Foreground="#1F2937" 
                                                     BorderBrush="#D1D5DB" 
                                                     BorderThickness="1" 
                                                     Padding="12,8" 
                                                     FontSize="14" 
                                                     SelectionChanged="juego_elegido" 
                                                     Margin="0,0,0,24"/>
                                            
                                            <StackPanel>
                                                <TextBlock Text="Género" 
                                                          Foreground="#6B7280" 
                                                          FontSize="14" 
                                                          FontWeight="Medium" 
                                                          Margin="0,0,0,4"/>
                                                <TextBlock x:Name="tb_generoJuego" 
                                                          Foreground="#1F2937" 
                                                          FontSize="16" 
                                                          Margin="0,0,0,16"/>
                                                
                                                <TextBlock Text="Precio" 
                                                          Foreground="#6B7280" 
                                                          FontSize="14" 
                                                          FontWeight="Medium" 
                                                          Margin="0,0,0,4"/>
                                                <TextBlock x:Name="tb_precioJuego" 
                                                          Foreground="#1F2937" 
                                                          FontSize="16" 
                                                          Margin="0,0,0,16"/>
                                                
                                                <TextBlock Text="Stock Disponible" 
                                                          Foreground="#6B7280" 
                                                          FontSize="14" 
                                                          FontWeight="Medium" 
                                                          Margin="0,0,0,4"/>
                                                <TextBlock x:Name="tb_stockJuego" 
                                                          Foreground="#1F2937" 
                                                          FontSize="16"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Detalles de la venta -->
                                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="16,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="Detalles de la Venta" 
                                                      Foreground="#1F2937" 
                                                      FontSize="20" 
                                                      FontWeight="SemiBold" 
                                                      Margin="0,0,0,16"/>
                                            
                                            <TextBlock Text="Cantidad" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,8"/>
                                            <TextBox x:Name="tb_cantidad" 
                                                    Style="{StaticResource ModernTextBox}" 
                                                    Margin="0,0,0,16"/>
                                            
                                            <Button x:Name="calcular_total" 
                                                   Content="Calcular Total" 
                                                   Style="{StaticResource ModernButton}" 
                                                   HorizontalAlignment="Stretch" 
                                                   Margin="0,0,0,16" 
                                                   Click="calcular_importe_total"/>
                                            
                                            <TextBlock Text="Total a Pagar" 
                                                      Foreground="#6B7280" 
                                                      FontSize="14" 
                                                      FontWeight="Medium" 
                                                      Margin="0,0,0,8"/>
                                            <TextBlock x:Name="tb_total" 
                                                      Foreground="#10B981" 
                                                      FontSize="24" 
                                                      FontWeight="Bold" 
                                                      Margin="0,0,0,24"/>
                                            
                                            <Button Content="Realizar Venta" 
                                                   Background="#10B981" 
                                                   Style="{StaticResource ModernButton}" 
                                                   HorizontalAlignment="Stretch" 
                                                   Click="vender"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>